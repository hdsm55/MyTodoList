<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <!-- Fonts links -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Shadows+Into+Light&display=swap"
      rel="stylesheet"
    />
    <title>TODO LIST</title>
  </head>

  <body>
    <img src="/images/background.jpg" />
    <div class="date">
        <a href="/workTasks"> Work Tasks</a>
        <br />
        <a href="/"> Today Tasks</a>
      <h3><% const d = new Date().toLocaleDateString('en-us', { weekday:"long",
        year:"numeric", month:"long", day:"numeric"}) %> <%= d %>
      </h3>
    </div>
  <div class="inputTasks">
    <h1>My To Do List (Work)</h1>
    <form action="/allWorkTasks" method="POST">
      <input
        type="text"
        id="new-task"
        name="myNewTask"
        placeholder="Add a new task"
        autocomplete="off"
        required
      />
      <button id="add-task">Add</button>
    </form>

    <ul>
      <%
      if (locals.myNewTask) { locals.myNewTask.forEach((myNewTask) => { %>
      <div class="task-check">
        <input type="checkbox" name="doneTask" id="doneTask" />
        <li><%= myNewTask %></li>
      </div>
      <% }); } %>
    </ul>
  </div>
  </body>
</html>


